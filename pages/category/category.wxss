/* pages/category/category.wxss */
.category{
  margin: 0;
  padding: 0;
}
.content{
  display: flex;
  flex-direction: row;
}
.left{
  padding: 40rpx 25rpx 40rpx 25rpx;
  display: flex;
  width: 25%;
  flex-direction: column;
  background-color: #fff;
  height: 100vh;
  overflow: scroll;
  border-right: 1px solid rgb(204,204,204);
}

.category_list{
  padding: 10rpx 30rpx;
  /* background-image: linear-gradient(to right,rgb(252,94,47),rgb(251,81,46)); */
  color: black;
  font-size: 24rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 90rpx;
  border-radius: 40rpx;
}
.cate_active{
  background-image: linear-gradient(to right,rgb(252,94,47),rgb(251,81,46));
  color: white;

}
.category_list:last-child{
  margin-bottom: 30rpx;
}
.right{
  display: flex;
  width: 65%;
  padding: 20rpx;
  align-content: flex-start;
  background-color: #fff;
  overflow-y: scroll;
  flex-wrap: wrap;
  /* justify-content: flex-end; */
  height: 100vh;
}
.shop_list{
  display: flex;
  flex-direction: column;
  margin: 10rpx 23rpx 45rpx 23rpx;
}
.shop_t{
  height: 110rpx;
  width: 110rpx;
}
.shop_t image{
  width: 100%;
  height: 100%;
}
.shop_b{
  padding-top: 18rpx;
  font-size: 26rpx;
  text-align: center;
  width: 110rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}