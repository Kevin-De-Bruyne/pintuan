/* pages/order_detail/order_detail.wxss */
.order_detail{
  margin: 0;
  padding: 0;
}
.content{
  padding: 30rpx;
}
.top{
  display: flex;
  flex-direction: row;
  height: 200rpx;
  background-color: #fff;
  align-items: center;
  border-radius: 20rpx;
}
.top_l{
  height: 135rpx;
  width: 135rpx;
  padding-left: 30rpx;
}
.top_l image{
  width: 100%;
  height: 100%;
}
.top_r{
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  justify-content: flex-start;
}
.goods_name{
  font-size: 23rpx;
  padding-bottom: 10rpx;
}
.goods_price{
  font-size: 22rpx;
  padding-bottom: 10rpx;
  color: red;
}
.goods_num{
  font-size: 22rpx;
  padding-bottom: 10rpx;
}
.guige{
  font-size: 22rpx;
  padding-bottom: 10rpx;
}
.center{
  display: flex;
  margin-top: 30rpx;
  flex-direction: column;
  background-color: #fff;
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
}
.center_t{
  padding: 15rpx 0;
  font-size: 22rpx;
  border-bottom:2px solid rgb(238,238,238);
}
.center_list{
  padding: 15rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
}
.shouhuo_btn{
  width: 300rpx;
  height: 80rpx;
  background-color: rgb(239,149,89);
  text-align: center;
  line-height: 80rpx;
  color: white;
  border-radius: 40rpx;
  margin: 50rpx auto 0 auto; 
}