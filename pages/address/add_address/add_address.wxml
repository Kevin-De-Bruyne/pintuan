<!--pages/address/direct/direct.wxml-->
<view style="height: {{height}}px;width: 100%;position: relative;"></view>
<navBar back home navigationBarTitle="添加地址"></navBar>
<van-cell-group>
	<van-field
	value="{{ username }}"
	required
	clearable
	label="收货人"
	placeholder="请输入收货人"
	bind:change="userpeople"
	/>

	<van-field
	value="{{ phone }}"
	type="number"
	label="手机号"
	placeholder="请输入手机号"
	required
	clearable
	bind:change="userphone"
	/>
	<van-field
	placeholder="请选择省份"
	label="省份"
	value="{{ provincer }}"
	disabled
	clearable
	required
	bindtap="provinces"
	/>
	<van-field
	placeholder="请选择城市"
	label="城市"
	value="{{ citys }}"
	disabled
	clearable
	required
	bindtap="cityvinces"
	/>
	<van-field
	placeholder="请选择区域"
	label="区域"
	value="{{ districts }}"
	disabled
	clearable
	required
	bindtap="disvinces"
	/>
	<van-field
	value="{{ address }}"
	required
	clearable
	label="详细地址"
	placeholder="请输入详细地址"
	bind:change="useraddress"
	/>
</van-cell-group>
<view class="default">
	<view class="arrears">默认地址</view>
	<view class="defarr"><van-switch checked="{{ checked }}" bind:change="onChange" size="20px" custom-class="chedef" /></view>
</view>

<van-popup show="{{ show }}" bind:close="proClose" position="bottom" >
	<van-picker
		show-toolbar
		title="省份列表"
		columns="{{ province }}"
		bind:cancel="proCancel"
		bind:confirm="proConfirm"
	/>
</van-popup>
<van-popup show="{{ cityshow }}" bind:close="cityClose" position="bottom" >
	<van-picker
		show-toolbar
		title="城市列表"
		columns="{{ city }}"
		bind:cancel="cityCancel"
		bind:confirm="cityConfirm"
	/>
</van-popup>
<van-popup show="{{ disshow }}" bind:close="disClose" position="bottom" >
	<van-picker
		show-toolbar
		title="区域列表"
		columns="{{ district }}"
		bind:cancel="disCancel"
		bind:confirm="disConfirm"
	/>
</van-popup>
<view class="buton">
	<button class="butsave leftbut" bindtap="saveres">保存该地址</button>
	<button class="butsave rigtbut" bindtap="delres" wx:if="{{address_id}}" style="margin-left:5px;">删除该地址</button>
</view>