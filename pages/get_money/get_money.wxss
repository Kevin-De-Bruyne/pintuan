/* pages/get_money/get_money.wxss */
.get_money{
  margin: 0;
  padding: 0;
}
.top{
  width: 100%;
  /* background-color:rgb(252,94,47); */
  background-image: linear-gradient(to right,rgb(252,94,47),rgb(251,81,46));
  /* height: 300rpx; */
  position: relative;
}
.user_info{
  padding: 30rpx 8%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.left{
  display: flex;
  flex-direction: row;
}
.icon{
  width: 110rpx;
  height: 110rpx;
}
.icon image{
  width: 100%;
  height: 100%;
  border-radius: 50%;

}
.info{
  padding-left: 30rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.nameAndVip{
  display: flex;
  flex-direction: row;
}
.name{
  font-size: 30rpx;
  font-weight: bold;
  color: white;
}
.vip{
  margin-left: 30rpx;
  padding: 2rpx 10rpx;
  background-image: linear-gradient(to right,rgb(120,124,151),rgb(189,190,217));
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.suggest{
  font-size: 25rpx;
  color: rgb(251,202,172);
  margin-top: 10rpx;
}
.reg{
  padding-left: 15rpx;
  color: white;
  font-size: 21rpx;
}
.invited_code{
  /* margin-top: 20rpx; */
  display: flex;
  flex-direction: row;
}
.invited_l{
  font-size: 20rpx;
  color:white;
}
.invited_r{
  font-size: 21rpx;
  color:white;
}
.level_up{
  margin:10rpx 4% 0 4%;
  background-image: linear-gradient(to right,rgb(248,235,216),rgb(235,212,166));
  height: 100rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  justify-content: space-around;
  display: flex;
  align-items: center;
}
.level_l{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
}
.level_l image{
  width: 60rpx;
  height: 60rpx;
}
.level_l text{
  /* color: white; */
  /* font-size: 20rpx; */
  padding-left: 30rpx;
  line-height: 60rpx;
}
.level_copy{
  padding: 10rpx 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  margin-left: 15rpx;
  color: rgb(118,99,63);
  text-align: center;
  font-weight: bold;
  border-radius: 30rpx;
  margin-right: 30rpx;
}
.rule{
  color: rgb(251,202,172);
  font-size: 23rpx;
  line-height: 25rpx;
}
.user_right{
  display: flex;
  align-items: center;
}
.icon-huangguan:before {
  content: "\e63f";
  font-size: 26rpx;
  color:white
}
.icon-huangguans:before {
  content: "\e63f";
  font-size: 43rpx;
}
.level_invite{
  font-size: 26rpx;
  color: rgb(118,99,63);
}
.level_code{
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(118,99,63);
}
.content{
  padding: 15rpx 15rpx 40rpx 15rpx;
  background-color: #fff;
}
.content_team{
  font-size: 33rpx;
  font-weight: bold;
  padding: 30rpx 0;
}
.tx_box{
  padding: 30rpx;
  border-radius: 25rpx;
  /* box-shadow: 10rpx 20rpx; */
  /* margin-top: 30rpx; */

  border: 2px solid rgb(244,244,244);
}
.ke_tx{
  font-size: 26rpx;
  color:rgb(94,94,94)
}
.tx_center{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}
.tx_center_l{
  font-size: 50rpx;
  color:rgb(251,81,17);
  font-weight: bold;
}
.tx_center_r{
  color: white;
  padding:15rpx 30rpx;
  border-radius: 40rpx;
  background-image: linear-gradient(to right,rgb(252,94,47),rgb(251,81,46));
}
.history{
  margin-top: 30rpx;
  height: 95rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  align-items: center;
  background-color: rgb(247,247,247);
}
.history_r{
  color:rgb(158,158,160);font-size:26rpx;
}
.zhitui_box{
